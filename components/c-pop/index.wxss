.c-poup {
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-image: url(https://ugc.hitv.com/platform_oss/17DADC8CCB6F4F2ABDD3FA011C600EF7.jpg);
  background-position: center bottom;
  z-index: 2;
  bottom: 0;
  background-repeat: no-repeat;
  background-size: contain;
  background-color: rgba(255, 255, 255, 0.1);
  overflow: hidden;
}
.c-poup .mask {
  width: 750rpx;
  height: 60%;
  background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
}
.c-poup .mask .close {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  background-image: url('https://ugc.hitv.com/platform_oss/B413A3EF4953480E885012ED2703757C.png');
  background-size: cover;
  top: 600rpx;
  right: 30rpx;
}
.c-poup .search {
  margin: 30rpx;
  width: 690rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  background-image: url(https://ugc.hitv.com/platform_oss/744AB9C6906E4FC5A26E971842D94A92.png);
  background-repeat: no-repeat;
  background-size: 30rpx 28rpx;
  background-position: 20rpx center;
}
.c-poup .search input {
  padding-left: 70rpx;
  width: 620rpx;
  height: 72rpx;
  color: #A5A8C2;
  font-size: 24rpx;
}
.c-poup .placeholder {
  font-size: 24rpx;
  color: #A5A8C2;
}
.c-poup .location {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 30rpx;
  width: 100%;
  height: auto;
  font-size: 24rpx;
  font-weight: bold;
  color: #A5A8C2;
}
.c-poup .location .left {
  width: 260rpx;
  font-size: 26rpx;
}
.c-poup .location .left text {
  display: block;
  height: 40rpx;
  margin-bottom: 40rpx;
}
.c-poup .location .left text.on {
  font-size: 30rpx;
  font-weight: 800;
  color: #FCDB4D;
}
.c-poup .location .right {
  width: 100%;
  height: 480rpx;
  margin-right: 30rpx;
}
.c-poup .location .right ::-webkit-scrollbar {
  display: none;
}
.c-poup .location .right .tag {
  display: inline-block;
  width: 155rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.c-poup .location .right .tag text {
  display: block;
  width: 135rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding: 0 10rpx;
  line-height: 70rpx;
}
.c-poup .location .right .tag text.on {
  background: rgba(252, 219, 77, 0.1);
  border: 2px solid #FCDB4D;
  color: #FFFFFF;
}
.c-poup .location .right .area {
  width: 100%;
  display: inline-block;
  margin-left: 10rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.c-poup .location .right .area .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.c-poup .location .right .area .up,
.c-poup .location .right .area .down {
  margin-right: 60rpx;
  position: relative;
}
.c-poup .location .right .area .up::after,
.c-poup .location .right .area .down::after {
  position: absolute;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-top-color: #A5A8C2;
  content: '';
  top: 15rpx;
  left: 55rpx;
}
.c-poup .location .right .area .down::after {
  border-top: none;
  border-bottom-color: #A5A8C2;
}
.c-poup .t-price {
  width: 690rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  color: #A5A8C2;
  margin: 0 30rpx;
}
.c-poup .t-price .tag {
  margin: 0 10rpx 30rpx 10rpx;
  text-align: center;
  line-height: 70rpx;
  height: 82rpx;
}
.c-poup .t-price .tag text {
  display: block;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding: 0 10rpx;
  font-size: 26rpx;
}
.c-poup .t-price .tag text.on {
  background: rgba(252, 219, 77, 0.1);
  border: 2px solid #FCDB4D;
  color: #FFFFFF;
}
.c-poup .t-price.order .tag {
  width: 320rpx;
}
.c-poup .t-price.label .tag {
  width: 150rpx;
}
